\usepackage{lmodern}
\usepackage{titlesec}
\usepackage{setspace}
\usepackage{lastpage}
\usepackage{fancyhdr}

% define left margin
\usepackage[hmarginratio=5:1]{geometry}

% use one and a half line spacing
\onehalfspacing

% define first page header and footer
\pagestyle{fancyplain} {
    \fancyhead[L]{\footnotesize II2202, Fall \the\year, Period 1}
    \fancyhead[C]{\footnotesize Project plan}
    \fancyhead[R]{\footnotesize \today{}}
    \fancyfoot[L]{}
    \fancyfoot[C]{}
    \fancyfoot[R]{\thepage \ (\pageref{LastPage})}
}

% change title font and size
\newcommand{\TitleFont}
{
    \usefont{T1}{\sfdefault}{b}{n}
    \fontsize{16}{20}
    \selectfont
}

% overriding maketitle
\renewcommand{\@maketitle}
{
    \newpage
    \null
    \begin{center}
        {\TitleFont \@title \par}
    \end{center}
    \par
}

% define font for section
\titleformat*{\section}{\large\bfseries\sffamily}
\titleformat*{\subsection}{\large\bfseries\sffamily}
\titleformat*{\subsubsection}{\normalsize\bfseries\sffamily}
\titleformat*{\paragraph}{\normalsize\bfseries\sffamily}
\titleformat*{\subparagraph}{\normalsize\bfseries\sffamily}
